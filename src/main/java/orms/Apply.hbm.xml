<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.vote.beans">
  <class name="Apply" table="apply" dynamic-update="true">
    <id name="id" column="id" type="java.lang.Long">
      <generator class="native"/>
    </id>
    <property name="aid" column="aid" type="java.lang.String" length="32" not-null="true"/>
    <property name="number" column="number" type="java.lang.Integer"/>
    <property name="status" column="status" type="java.lang.Character"/>
    <property name="title" column="title" type="java.lang.String" length="25" not-null="true"/>
    <property name="description" column="description" type="java.lang.String" length="3000" not-null="true"/>
    <property name="imgAddr" column="img_addr" type="java.lang.String" length="56"/>
    <property name="sex" column="sex" type="java.lang.Byte"/>
    <property name="age" column="age" type="java.lang.Integer"/>
    <property name="name" column="name" type="java.lang.String" length="15"/>
    <property name="telephone" column="telephone" type="java.lang.String" length="11"/>
    <property name="email" column="email" type="java.lang.String" length="191"/>
    <property name="school" column="school" type="java.lang.String" length="16"/>
    <property name="company" column="company" type="java.lang.String" length="26"/>
    <property name="address" column="address" type="java.lang.String" length="40"/>
  </class>
</hibernate-mapping>
